#ifndef AGENDA_H_
#define AGENDA_H_

#include <list>
#include "Pacientes.h"

using namespace std;

class Agenda {

private:

	list<Pacientes> listaContactos_;
	list<Pacientes> fav_;


public:
	Agenda();
	virtual ~Agenda();
	list<Pacientes> cargarEnLista(string fichero="Agenda.txt");
	
	bool buscarDni(string dni);
	bool buscarApellido(string apellido);
	void ordenarFichero();
	void introducirPaciente(Pacientes p);
	bool borrarPaciente(const std::string& apellidos);
	void importarCopia(const std::string& rutaArchivo);
	void exportarFichero(const std::string& exportado);
	void listarFavoritos();
	void listarFrecuentes();
	void imprimir(list<Pacientes> aux);
	const list<Pacientes>& getFav() const;
	void setFav(const list<Pacientes>& fav);
	const list<Pacientes>& getListaContactos() const;
	void setListaContactos(const list<Pacientes>& listaContactos);
	void actualizarFichero();
	void imprimir();
};

#endif /* AGENDA_H_ */
